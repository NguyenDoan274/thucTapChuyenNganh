<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/admin">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Product page</li>
    </ol>
    <div class="card-header">
        <h2>Product Pages</h2>
    </div>
    <br>
    <div class="card body">
        <div class="col-md-6">
            <a href="/admin/product/create" class="btn btn-primary">Thêm mới</a>
        </div>

        <table class="table">
            <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Image</th>
                <th scope="col">Price</th>
                <th scope="col">Author</th>
                <th scope="col">Description</th>
                <th scope="col">Category</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
            </thead>
            <tbody>
            {{#each products}}
                <tr>
                    <th scope="row">{{_id}}</th>
                    <td>{{name}}</td>
                    <td><img src="{{image}}" class="img-thumbnail" alt="" width="100"></td>
                    <td>{{price}}</td>
                    <td>{{author}}</td>
                    <td>{{description}}</td>
                    <td>{{category.name}}</td>
                    <td><a href="/admin/product/edit/{{_id}}"><i class="fa-solid fa-pen-to-square text-warning"></i></a></td>
                    <td>
                        <form action="/admin/product/{{_id}}?_method=DELETE" method="post">
                            <button type="submit" class="border-0">
                                <i class="fa-solid fa-trash text-danger"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>

</div>
