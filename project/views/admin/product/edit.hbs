<div class="container-fluid">
    <div class="row">
        <div class="card-body">
            <h1 class="card-header">Edit Product</h1>

            <form action="/admin/product/edit/{{product._id}}?_method=PUT" method="post" class="form-control">
                <div class="mb-3">
                    <label htmlFor="exampleInputEmail1" class="form-label">Name</label>
                    <input value="{{product.name}}" name="name" type="text" class="form-control" id="exampleInputEmail1"/>
                </div>
                <div class="mb-3">
                    <label htmlFor="exampleInputPassword1" class="form-label">image</label>
                    <input value="{{product.image}}" name="image" type="text" class="form-control" id="exampleInputPassword1"/>
                </div>
                <div class="mb-3 form-check">
                    <label htmlFor="exampleInputPassword1" class="form-label">price</label>
                    <input value="{{product.price}}" name="price" type="number" class="form-control"/>
                </div>
                <div class="mb-3 form-check">
                    <label htmlFor="exampleInputPassword1" class="form-label">author</label>
                    <input value="{{product.author}}" name="author" type="string" class="form-control"/>
                </div>
                <div class="mb-3 form-check">
                    <label htmlFor="exampleInputPassword1" class="form-label">description</label>

                    <textarea   name="description" type="string" class="form-control">{{product.description}}</textarea>
                </div>
                <div class="mb-3 form-check">
                    <label htmlFor="exampleInputPassword1" class="form-label">category</label>
                    <select name="categoryId"  class="form-control">
                        {{#each categories}}
                            <option value="{{_id}}">{{name}}</option>
                        {{/each}}
                    </select>

                </div>
                <button type="submit" class="btn btn-primary">Sá»­a</button>
            </form>
        </div>
    </div>
</div>
