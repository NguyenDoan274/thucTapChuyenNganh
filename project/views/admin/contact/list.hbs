<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/admin">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Contact page</li>
    </ol>
    <div class="card-header">
        <h2>Contact Pages</h2>
    </div>
    <br>
    <div class="card body">
        <div class="col-md-6">
            <a href="/admin/contact/create" class="btn btn-primary">Thêm mới</a>
        </div>

        <table class="table">
            <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Country</th>
                <th scope="col">Address</th>
                <th scope="col">Phone</th>
                <th scope="col">Mail</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
            </thead>
            <tbody>
            {{#each contacts}}
                <tr>
                    <th scope="row">{{_id}}</th>
                    <td>{{country}}</td>
                   <td>{{address}}</td>
                    <td>{{phone}}</td>
                    <td>{{email}}</td>
                    <td><a href="/admin/contact/edit/{{_id}}"><i class="fa-solid fa-pen-to-square text-warning"></i></a></td>
                    <td>
                        <form action="/admin/contact/{{_id}}?_method=DELETE" method="post">
                            <button type="submit" class="border-0">
                                <i class="fa-solid fa-trash text-danger"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>

</div>
