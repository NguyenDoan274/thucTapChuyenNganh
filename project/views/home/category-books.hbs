<section class="hero-section position-relative padding-large" style="background-image: url(/images/banner-image-bg-1.jpg); background-size: cover; background-repeat: no-repeat; background-position: center; height: 400px;">
    <div class="hero-content">
        <div class="container">
            <div class="row">
                <div class="text-center">
                    <h1>Shop</h1>
                    <div class="breadcrumbs">
                <span class="item">
                  <a href="/">Home > </a>
                </span>
                        <span class="item text-decoration-underline">Shop</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="shopify-grid padding-large">
    <div class="container">
        <div class="row flex-row-reverse g-md-5">
            <main class="col-md-9">
                <div class="filter-shop d-flex flex-wrap justify-content-between mb-5">
                    <div class="showing-product">
                        <p>Showing 1â€“9 of 55 results</p>
                    </div>
                    <div class="sort-by">
                        <select id="sorting" class="form-select" data-filter-sort="" data-filter-order="">
                            <option value="">Default sorting</option>
                            <option value="">Name (A - Z)</option>
                            <option value="">Name (Z - A)</option>
                            <option value="">Price (Low-High)</option>
                            <option value="">Price (High-Low)</option>
                            <option value="">Rating (Highest)</option>
                            <option value="">Rating (Lowest)</option>
                            <option value="">Model (A - Z)</option>
                            <option value="">Model (Z - A)</option>
                        </select>
                    </div>
                </div>

               <div class="row product-content product-store">
                   {{#each products}}
                       <div class="col-lg-3 col-md-4 mb-4">
                       <a href="/single-product/{{_id}}">


                               <div class="card position-relative p-4 border rounded-3">

                                   <img src="{{image}}" class="img-fluid shadow-sm" alt="product item">
                                   <h6 class="mt-4 mb-0 fw-bold">{{name}}</h6>
                                   <div class="review-content d-flex">
                                       <p class="my-2 me-2 fs-6 text-black-50">{{author}}</p>

                                       <div class="rating text-warning d-flex align-items-center">
                                           <svg class="star star-fill">
                                               <use xlink:href="#star-fill"></use>
                                           </svg>
                                           <svg class="star star-fill">
                                               <use xlink:href="#star-fill"></use>
                                           </svg>
                                           <svg class="star star-fill">
                                               <use xlink:href="#star-fill"></use>
                                           </svg>
                                           <svg class="star star-fill">
                                               <use xlink:href="#star-fill"></use>
                                           </svg>
                                           <svg class="star star-fill">
                                               <use xlink:href="#star-fill"></use>
                                           </svg>
                                       </div>
                                   </div>

                                   <span class="price text-primary fw-bold mb-2 fs-5">{{price}}vnd</span>
                                   <div class="card-concern position-absolute start-0 end-0 d-flex gap-2">

                                   </div>
                               </div>
                                 </a>
                           </div>

                   {{/each}}


               </div>

