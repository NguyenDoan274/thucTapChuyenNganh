<section id="items-listing" class="padding-large">
    <div class="container">
        <div class="row justify-content-center">

            <div class="col-md-6 mb-4 mb-lg-0 col-lg-3">
                <div class="featured border rounded-3 p-4">
                    <div class="section-title overflow-hidden mb-5 mt-2">
                        <h3 class="d-flex text-center flex-column mb-0">Featured</h3>
                    </div>
                    <div class="items-lists">
                        {{#each products}}
                            <div class="item d-flex">
                                <a href="/single-product/{{_id}}"> <img src="{{image}}" class="img-fluid shadow-sm" alt="{{name}}"></a>
                                <div class="item-content ms-3">
                                    <h6 class="mb-0 fw-bold">
                                        <a href="/single-product/{{_id}}">{{name}}</a>
                                    </h6>
                                    <p class="my-2 me-2 fs-6 text-black-50">{{author}}</p>
                                    <span class="price text-primary fw-bold fs-5">{{price}} vnđ</span>
                                </div>
                            </div>
                            <hr class="gray-400">
                        {{/each}}
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4 mb-lg-0 col-lg-3">
                <div class="best-reviewed border rounded-3 p-4">
                    <div class="section-title overflow-hidden mb-5 mt-2">
                        <h3 class="d-flex text-center flex-column mb-0">Best reviewed</h3>
                    </div>
                    <div class="items-lists">
                        {{#each products}}
                            <div class="item d-flex">
                                <a href="/single-product/{{_id}}"> <img src="{{image}}" class="img-fluid shadow-sm" alt="{{name}}"></a>
                                <div class="item-content ms-3">
                                    <h6 class="mb-0 fw-bold">
                                        <a href="/single-product/{{_id}}">{{name}}</a>
                                    </h6>
                                    <p class="my-2 me-2 fs-6 text-black-50">{{author}}</p>
                                    <span class="price text-primary fw-bold fs-5">{{price}} vnđ</span>
                                </div>
                            </div>
                            <hr class="gray-400">
                        {{/each}}
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>


<section id="categories" class="padding-large pt-0">
    <div class="container">
        <div class="section-title overflow-hidden mb-4">
            <h3 class="d-flex align-items-center">Categories</h3>
        </div>

        <div class="row">
            {{#each categories}}
                <div class="col-md-4">
                    <div class="card mb-4 border-0 rounded-3 position-relative overflow-hidden">
                        <a href="/category-books/{{_id}}">

                            <div class="ratio ratio-16x9">
                                <img src="{{image}}"
                                     class="img-fluid rounded-3 w-100 h-100 object-fit-cover"
                                     alt="{{name}}">
                            </div>

                            <h6 class="position-absolute bottom-0 bg-primary m-3 py-1 px-3 rounded-3">
                                <span class="text-white">{{name}}</span>
                            </h6>

                        </a>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</section>
